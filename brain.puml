}

class Player {
   string name
   integer hp
   string image
   Weapon weapon
}

class Weapon {
    string name;
    string image;
    int damage;
}

class Game {
    Board;
    array players;
    array weapons;
    activePlayer = players[0];
    target = activePlayer === player[0] ? player[1] : player[0];

    playerMove()
    playerGetWeapon(weapon)
    playerDropWeapon(weapon)

    checkFightBegin()

    startFight()

    fight()
    playerAttack()
    playerDefence()

    changePlayerTurn()

    checkVictory()

    endGame()
}

