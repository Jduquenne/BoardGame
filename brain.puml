class Cell {
    string id;
    int whatInside;
    string container = initContainer();

    initContainer()

    setFloor()
    setObstacle()
    setWeapon()
    setPlayer()

    removeFloor()
    removeObstacle()
    removeWeapon()
    removePlayer()

    isFloor()
    isObstacle()
    isWeapon()
